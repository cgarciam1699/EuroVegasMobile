<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cesped"
    tools:context=".carrera_caballos_a_correr">

    <ImageView
        android:id="@+id/Calle1"
        android:layout_width="101dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="292dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caballo1" />

    <ImageView
        android:id="@+id/Calle2"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="167dp"
        app:layout_constraintStart_toEndOf="@+id/Calle1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caballo2" />

    <ImageView
        android:id="@+id/Calle3"
        android:layout_width="104dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caballo3" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="307dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="499dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="618dp"
        android:layout_marginEnd="198dp"
        android:layout_marginRight="50dp"
        android:alpha="0.8"
        android:background="@drawable/btn_redondeado_white"
        android:onClick="vueltaAJugar"
        android:text="VOLVER A JUGAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="291dp"
        app:srcCompat="@drawable/linea_meta" />

    <Button
        android:id="@+id/bt_volver_al_menu"
        android:layout_width="79dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/volver_menu_casino"
        android:onClick="volver_menu" />

</RelativeLayout>

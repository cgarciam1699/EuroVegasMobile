<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActivityVentanaPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_casino_1"
    tools:context=".mostrar_pronosticos_registrados">

    <LinearLayout
        android:id="@+id/ll03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvtitulo"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="30"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/btn_redondeado_white"
            android:id="@+id/etMeterEmail"
            android:hint="Inserta Correo"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll03"
        android:layout_marginTop="18dp"
        android:weightSum="100">

        <Button
            android:id="@+id/btnLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_weight="50"
            android:background="@drawable/btn_fondo_color"
            android:text="Ver pronosticos"
            android:textColor="#FFF"
            android:textStyle="normal" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvLista"
        android:layout_width="wrap_content"
        android:layout_height="256dp"
        android:layout_below="@+id/ll04"
        android:layout_marginStart="40dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="#FFF"></ListView>

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/btn_fondo_color"
        android:gravity="center"
        android:text="PRONOSTICOS TEMPORADA"
        android:textColor="#FFF"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_volver_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/icono_regresar"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="ir_menu" />
</RelativeLayout>
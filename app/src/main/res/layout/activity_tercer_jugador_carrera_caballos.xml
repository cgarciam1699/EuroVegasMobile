<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cesped"
    tools:context=".tercer_jugador_carrera_caballos">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TERCERA APUESTA"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenCaballosP3"
        android:layout_width="322dp"
        android:layout_height="141dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/icono_carrera_caballos" />

    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenCaballosP3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt3Caballo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eleccionCaballo3"
                android:text="APUESTA 1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt3Caballo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eleccionCaballo3"
                android:text="APUESTA 2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt3Caballo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="eleccionCaballo3"
                android:text="APUESTA 3"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/cantidadApostada3"
        android:layout_width="134dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout5" />

    <TableLayout
        android:id="@+id/tableLayout6"
        android:layout_width="263dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cantidadApostada3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btDeCinco3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="apuestaJugador3"
                android:text="10"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btDeDiez3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="apuestaJugador3"
                android:text="100"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btDeVeinte3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="apuestaJugador3"
                android:text="1000"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btSiguienteP3"
        android:layout_width="142dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:onClick="avance3"
        android:text="Â¡A CORRER!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout6" />
</androidx.constraintlayout.widget.ConstraintLayout>
